---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const links = [/*
  { name: "About us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Use Cases", href: "#cases" },
  { name: "Pricing", href: "#Testimonials" },
  { name: "Blog", href: "#Home" }, */
];
---

<section class=" bg-dark">
  <div class="w-full max-w-[1280px]  mx-auto">
    <div
      class=" text-gray py-[55px] "
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 py-4 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <img src="/sais-dns-logo-light.svg" class="h-12" alt="وقاية" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >2025 جمعية الإنترنت السعودية - برعاية <a
            class="underline"
            target="_blank"
            href="https://salam.sa/">سلام</a
          >
        </span>
      </div>
    </div>
  </div>
</section>
